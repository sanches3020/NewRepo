            <canvas id="historyChart" width="600" height="200"></canvas>
        }
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    var history = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.OrderBy(r => r.TakenAt).Select(r => new { date = r.TakenAt.ToString("yyyy-MM-dd"), score = r.Score })));

    var labels = history.map(h => h.date);
    var data = history.map(h => h.score);

    if (labels.length > 0) {
        var ctx = document.getElementById('historyChart').getContext('2d');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{ label: '–ë–∞–ª–ª—ã', data: data, borderColor: 'rgb(75, 192, 192)', tension: 0.2 }]
            },
            options: { responsive: true }
        });
    }
</script>