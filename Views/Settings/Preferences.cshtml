<script>
function updatePreferences() {
    const form = document.getElementById('preferencesForm');
    const formData = new FormData(form);
    
    const data = {
        language: formData.get('language'),
        timezone: formData.get('timezone'),
        notifications: formData.get('notifications') === 'on',
        emailUpdates: formData.get('emailUpdates') === 'on',
        soundEffects: formData.get('soundEffects') === 'on',
        animations: formData.get('animations') === 'on'
    };
    
    fetch('/settings/preferences', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify(data)
    })
    .then(response => response.json())
    .then(result => {
        if (result.success) {
            showToast(result.message, 'success');
        } else {
            showToast('–û—à–∏–±–∫–∞ –ø—Ä–∏ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏–∏ –Ω–∞—Å—Ç—Ä–æ–µ–∫', 'error');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        showToast('–ü—Ä–æ–∏–∑–æ—à–ª–∞ –æ—à–∏–±–∫–∞', 'error');
    });
}

function resetPreferences() {
    if (confirm('–°–±—Ä–æ—Å–∏—Ç—å –≤—Å–µ –Ω–∞—Å—Ç—Ä–æ–π–∫–∏ –∫ –∑–Ω–∞—á–µ–Ω–∏—è–º –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é?')) {
        document.getElementById('preferencesForm').reset();
        showToast('–ù–∞—Å—Ç—Ä–æ–π–∫–∏ —Å–±—Ä–æ—à–µ–Ω—ã', 'info');
    }
}

function showToast(message, type) {
    const toast = document.createElement('div');
    toast.className = 'toast-notification';
    toast.textContent = message;
    
    const colors = {
        success: '#10b981',
        error: '#ef4444',
        info: '#3b82f6',
        warning: '#f59e0b'
    };
    
    toast.style.cssText = `
        position: fixed;
        top: 20px;
        right: 20px;
        background: ${colors[type]};
        color: white;
        padding: 12px 20px;
        border-radius: 6px;
        z-index: 1000;
        animation: slideIn 0.3s ease;
    `;
    
    document.body.appendChild(toast);
    
    setTimeout(() => {
        toast.remove();
    }, 3000);
}

// –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –Ω–∞—Å—Ç—Ä–æ–µ–∫
document.addEventListener('DOMContentLoaded', function() {
    const savedSettings = localStorage.getItem('sofiaPreferences');
    if (savedSettings) {
        const settings = JSON.parse(savedSettings);
        
        if (settings.language) {
            document.getElementById('language').value = settings.language;
        }
        if (settings.timezone) {
            document.getElementById('timezone').value = settings.timezone;
        }
        if (settings.notifications !== undefined) {
            document.getElementById('notifications').checked = settings.notifications;
        }
        if (settings.emailUpdates !== undefined) {
            document.getElementById('emailUpdates').checked = settings.emailUpdates;
        }
        if (settings.soundEffects !== undefined) {
            document.getElementById('soundEffects').checked = settings.soundEffects;
        }
        if (settings.animations !== undefined) {
            document.getElementById('animations').checked = settings.animations;
        }
    }
});

// –°–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ –Ω–∞—Å—Ç—Ä–æ–µ–∫ –≤ localStorage –ø—Ä–∏ –∏–∑–º–µ–Ω–µ–Ω–∏–∏
document.querySelectorAll('#preferencesForm input, #preferencesForm select').forEach(element => {
    element.addEventListener('change', function() {
        const form = document.getElementById('preferencesForm');
        const formData = new FormData(form);
        
        const settings = {
            language: formData.get('language'),
            timezone: formData.get('timezone'),
            notifications: formData.get('notifications') === 'on',
            emailUpdates: formData.get('emailUpdates') === 'on',
            soundEffects: formData.get('soundEffects') === 'on',
            animations: formData.get('animations') === 'on'
        };
        
        localStorage.setItem('sofiaPreferences', JSON.stringify(settings));
    });
});
</script>
