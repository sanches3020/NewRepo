}

@@media (max-width: 768px) {
    .hero-section {
        padding: 30px 0;
    }
    
    .display-4 {
        font-size: 2.5rem;
    }
    
    .feature-card {
        padding: 20px;
    }
    
    .step-item {
        flex-direction: column;
        text-align: center;
    }
}
</style>